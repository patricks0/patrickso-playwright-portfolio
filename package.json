{
  "name": "patrickso-playwright-portfolio",
  "version": "1.0.0",
  "description": "This repository is my automation testing portfolio, built to showcase hands-on expertise with Playwright. It demonstrates how to design and execute UI tests, API tests, and CI/CD pipelines using modern best practices.",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:dev": "npx playwright test --project=dev",
    "test:dev:env": "dotenv -e .env.dev -- npx playwright test --project=dev",
    "test:staging": "npx playwright test --project=staging",
    "test:api": "npx playwright test --project=api",
    "pw:report": "npx playwright show-report",
    "report:html": "npx playwright show-report",
    "allure-report": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "allure:clean": "rm -rf allure-results",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "allure:test": "npm run allure:clean && npx playwright test",
    "lint": "eslint . --ext .ts",
    "format": "prettier -w ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patricks0/patrickso-playwright-portfolio.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/patricks0/patrickso-playwright-portfolio/issues"
  },
  "homepage": "https://github.com/patricks0/patrickso-playwright-portfolio#readme",
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@playwright/test": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@types/node": "^24.3.0",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.3.3",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "playwright": "^1.55.0",
    "playwright-core": "^1.55.0"
  }
}
